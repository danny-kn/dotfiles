# /usr/share/sway/config.d/
# /etc/sway/config.d/
# $HOME/.config/sway/config.d/

default_border pixel 3
default_floating_border pixel 3

# base16 grayscale dark colorscheme:
client.focused #464646 #464646 #b9b9b9 #464646
client.unfocused #101010 #101010 #b9b9b9 #101010

# base16 grayscale light colorscheme:
# client.focused #b9b9b9 #b9b9b9 #464646 #b9b9b9
# client.unfocused #f7f7f7 #f7f7f7 #464646 #f7f7f7

bar {
	# swaybar_command waybar

	status_command while date +'%Y-%m-%d %X'; do sleep 1; done

	position top
	font pango: "ZedMono Nerd Font" 12

	colors {
		# base16 grayscale dark colorscheme:
		background #101010
		statusline #b9b9b9
		inactive_workspace #101010 #101010 #b9b9b9
		active_workspace #101010 #101010 #b9b9b9
		focused_workspace #464646 #464646 #b9b9b9

		# base16 grayscale light colorscheme:
		# background #f7f7f7
		# statusline #464646
		# inactive_workspace #f7f7f7 #f7f7f7 #464646
		# active_workspace #f7f7f7 #f7f7f7 #464646
		# focused_workspace #b9b9b9 #b9b9b9 #464646
	}
}

include '$(/usr/libexec/sway/layered-include "/usr/share/sway/config.d/*.conf" "/etc/sway/config.d/*.conf" "${XDG_CONFIG_HOME:-$HOME/.config}/sway/config.d/*.conf")'
